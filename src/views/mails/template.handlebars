<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{{subject}}</title>
		<style>
			body { margin: 0; padding: 0; background-color: #ffffff;
			font-family: Avenir, "Avenir Next LT Pro", Montserrat, Corbel, "URW
			Gothic", source-sans-pro, sans-serif; font-size: 16px; color:
			#6f4d38; } .email-container { padding: 32px 0; min-height: 100%;
			width: 100%; background-color: #ffffff; } .email-wrapper { margin: 0
			auto; max-width: 600px; background-color: #ffffff; } .logo-container
			{ text-align: center; padding: 24px; } .logo { height: 132px;
			max-width: 100%; display: inline-block; border: none; outline: none;
			} .heading { color: #6f4d38; font-weight: bold; text-align: left;
			margin: 0; font-size: 24px; padding: 16px 24px 0 24px; }
			.section-text { color: #6f4d38; font-size: 16px; padding: 16px 24px;
			} .button-container { text-align: left; padding: 16px 24px; }
			.cta-button { background-color: #652023; color: #ffffff;
			font-weight: bold; font-size: 16px; padding: 16px 32px;
			text-decoration: none; border-radius: 4px; display: inline-block; }
			.divider { width: 100%; border: none; border-top: 1px solid #eeeeee;
			margin: 16px 0; } .info-section { padding: 8px 24px; color: #6f4d38;
			} .info-section h3 { font-size: 20px; font-weight: bold; margin: 0;
			padding-bottom: 8px; } .info-section p { font-size: 16px;
			font-weight: normal; margin: 0; padding-bottom: 16px; } .info-table
			{ width: 100%; border-collapse: collapse; table-layout: fixed;
			margin-bottom: 16px; } .info-table td { padding: 4px 0; font-size:
			16px; color: #6f4d38; } .left { text-align: left; } .right {
			text-align: right; } .bold { font-weight: bold; } .footer {
			font-size: 14px; padding: 16px 24px; } .footer a { color: #652023;
			font-weight: bold; text-decoration: none; }
		</style>
	</head>
	<body>
		<div class="email-container">
			<table
				class="email-wrapper"
				align="center"
				role="presentation"
				cellspacing="0"
				cellpadding="0"
				border="0"
			>
				<tbody>
					<tr>
						<td>
							<div class="logo-container">
								<img
									alt="Tredview hotel Logo"
									src="https://tredview-hotel-c11bb0d081f7.herokuapp.com/images/logo.png"
									height="132"
									class="logo"
								/>
							</div>
							<!-- START MAIN CONTENT AREA -->
							{{{body}}}
							<!-- END MAIN CONTENT AREA -->
							<div class="footer">
								Need help?
								<a
									href="https://tredviewhotels.com/contact"
									target="_blank"
								>Click here</a>
								to contact us.
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</body>
</html>